    <style name="TextSecure.LightNoActionBarBlue" parent="TextSecure.LightNoActionBar">
        <item name="conversation_list_toolbar_background">@color/core_ultramarine</item>
        <item name="pref_icon_tint">@color/core_ultramarine</item>
        <item name="android:statusBarColor">@color/core_ultramarine</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="TextSecure.LightNoActionBarGreen" parent="TextSecure.LightNoActionBar">
        <item name="colorPrimary">@color/green_500</item>
        <item name="colorPrimaryDark">@color/green_800</item>
