        <item name="actionBarStyle">@style/TextSecure.LightActionBarBlue</item>
        <item name="pref_icon_tint">@color/core_ultramarine</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@color/core_ultramarine</item>
    </style>

    <style name="TextSecure.LightThemeGreen" parent="TextSecure.BaseLightTheme">
        <item name="actionBarStyle">@style/TextSecure.LightActionBarGreen</item>
        <item name="colorPrimary">@color/green_500</item>
        <item name="colorPrimaryDark">@color/green_800</item>
